@{
    ViewBag.Title = "Reset password confirmation";
}


<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>
<div>
    <p>
        <strong>Your password has been reset. Please</strong> @Html.ActionLink("Click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
    </p>
</div>

@section Styles {
    .background-clouds {
    background-image: url("https://www.kindpng.com/picc/m/148-1489572_transparent-chat-icon-png-transparent-background-chat-icon.png");
    background-repeat: no-repeat;
    background-size: 100% 100%;
    }
}